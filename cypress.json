// cypress.json
{
  "baseUrl": "https://example.cypress.io",
  "viewportWidth": 1280,
  "viewportHeight": 720,
  "watchForFileChanges": false,
  "screenshotOnRunFailure": true,
  "video": true,
  "retries": {
    "runMode": 2,
    "openMode": 0
  },
  "reporter": "mochawesome",
  "reporterOptions": {
    "reportDir": "cypress/reports",
    "overwrite": false,
    "html": true,
    "json": true
  },
  "defaultCommandTimeout": 8000,
  "pageLoadTimeout": 30000,
  "requestTimeout": 15000
}
